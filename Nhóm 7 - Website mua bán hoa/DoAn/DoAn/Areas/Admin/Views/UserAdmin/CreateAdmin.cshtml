@model DoAn.Models.QuanTriVien

@{
    ViewBag.Title = "CreateAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    input {
        width: 100%;
        padding: 12px;
        border-radius: 5px;
    }

    .col-6 {
        padding-left: 7rem;
    }
</style>

<h2 class="text-center">Create Admin</h2>

@if (ViewBag.ErrorMessage != null)
{
    <p style="color:red" class="error-message">@ViewBag.ErrorMessage</p>
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.TenQTV, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenQTV)
                        @Html.ValidationMessageFor(model => model.TenQTV)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.EmailQTV, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EmailQTV)
                        @Html.ValidationMessageFor(model => model.EmailQTV)
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.TaiKhoanQTV, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TaiKhoanQTV)
                        @Html.ValidationMessageFor(model => model.TaiKhoanQTV)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MatKhauQTV, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MatKhauQTV)
                        @Html.ValidationMessageFor(model => model.MatKhauQTV)
                    </div>
                </div>
            </div>
        </div>

        @*<div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>*@

        <div class="form-group mt-xl-5">
            @Html.ActionLink("Back to List", "AdminList", null, new { @class = "btn btn-secondary mr-3" })
            <input type="submit" value="Create" class="btn btn-success" style="width:auto" />
        </div>
    </div>
}
